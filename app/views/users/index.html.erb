<h1>ALL USERS</h1>

<ul class="users-container">
  <% @users.each do |user| %>
    <li class="user-div">
      <img class="photo" src=<%= user.photo %> alt="photo">
      <div class= "user-details">
        <%= link_to user_path(user) do %>
          <h2><%= user.name %></h2>
        <% end %>
        <p>Number of posts: <%= user.posts_counter %></p>
      </div>
    </li>
  <% end %>
</ul>
